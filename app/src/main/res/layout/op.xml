<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/sa2"
    android:gravity="center|top"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow">
        <ImageView
            android:id="@+id/backButton15"
            android:src="@drawable/left"
            android:layout_width="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_height="20dp"/>
        >
    <TextView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"
        android:gravity="center"
        android:text="MOST RUNS AND WICKETS"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/orangeCap"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="210dp"
            android:src="@drawable/f"
            android:id="@+id/pic1"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Most Runs"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/purpleCap"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:src="@drawable/purplecap"
            android:id="@+id/pic2"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:text="Most Wickets"/>

</LinearLayout>