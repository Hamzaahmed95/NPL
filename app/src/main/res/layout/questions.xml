<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="top|center"
    android:background="@color/pink1"
    android:layout_width="280dp"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ques1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"
        android:text="Who's gonna win NPL 2017 ?"/>

    <Spinner
        android:id="@+id/favTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />
    <EditText
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:textColorHint="@android:color/white"
        android:hint="Who's your favourite player of NPL 2017?"
        android:id="@+id/FavPlayer"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:textColor="@color/darkMaroon"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/button_text_send"
        android:id="@+id/sendButtonQuesion"/>

</LinearLayout>