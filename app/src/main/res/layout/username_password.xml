<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/sa2"
        android:layout_margin="30dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ques1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:padding="10dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:hint="Enter Your Username?"
        android:id="@+id/Username"/>
    <Spinner
        android:id="@+id/FavPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <EditText
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:hint="FAVOURITE PLAYER OF NPL 2017 ?"
        android:id="@+id/FavPlayer"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-condensed"
        android:text="Who's gonna win NPL 2017 ?"/>

    <Spinner
        android:id="@+id/favTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@android:color/white"
        android:textColor="@color/darkMaroon"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/button_text_send"
        android:id="@+id/sendButtonQuesion"/>
    </LinearLayout>
</LinearLayout>